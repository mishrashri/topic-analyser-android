<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".unitOne.ScrollViewActivity"
    android:background="@drawable/bg_image">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/scroll_view"
            android:gravity="center_horizontal"
            android:textSize="30sp"
            android:textStyle="bold"
            android:background="@drawable/btn"
            android:textColor="#006064"/>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:src="@drawable/flogo1"
            android:id="@+id/stImg"
            android:clickable="true"
            android:foreground="?attr/selectableItemBackground"/>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:src="@drawable/flogo2"
            android:clickable="true"
            android:foreground="?attr/selectableItemBackground"/>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:src="@drawable/flogo3"/>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:src="@drawable/flogo4"
            android:clickable="true"
            android:foreground="?attr/selectableItemBackground"/>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:src="@drawable/flogo5"
            android:clickable="true"
            android:foreground="?attr/selectableItemBackground"/>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:src="@drawable/flogo6"/>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:src="@drawable/logo_light"
            android:clickable="true"
            android:foreground="?attr/selectableItemBackground"/>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:src="@drawable/logo_light"
            android:clickable="true"
            android:foreground="?attr/selectableItemBackground"/>
    </LinearLayout>
</ScrollView>